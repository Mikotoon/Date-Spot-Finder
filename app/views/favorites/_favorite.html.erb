<div class="favorite-btn">
    <% favorite = tweet.favorites.find_by(user_id: current_user.id) %>

    <% if favorite.nil? %>
        <%= form_with url: tweet_favorites_path(tweet),
                    method: :post,
                    local: true do %>
        <button class="icon-btn">
            <i class="far fa-star"></i>
        </button>
        <% end %>
    <% else %>
        <%= form_with url: tweet_favorite_path(tweet, favorite),
                    method: :delete,
                    local: true do %>
        <button class="icon-btn starred">
            <i class="fas fa-star"></i>
        </button>
        <% end %>
    <% end %>
</div>
